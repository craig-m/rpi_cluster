! /etc/keepalived/keepalived.conf - Secondary config.
! {{ ansible_managed }}

global_defs {
   router_id {{ keepalived_id }}
}

vrrp_instance VI_1 {
    state BACKUP
    interface eth0
    virtual_router_id 51
    priority 100
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ keepalived_pass }}
    }
    virtual_ipaddress {
        {{ rpi_loadbal_float_ip }}
    }
}
