#!/bin/bash
mymac=$(ip addr show eth0 | grep 'b8:27:eb:' | awk '{print $2'} | wc -c)
# this MAC prefix belongs to the raspberry pi foundation
# see https://hwaddress.com/?q=B827EB000000 
if [ $mymac -eq "18" ]; then
  rpihwstate="True"
else
  rpihwstate="False"
fi
echo -e "{ 'rpi_hw_mac' : '$rpihwstate' }";
